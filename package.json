{
  "name": "node-backend",
  "version": "1.0.0",
  "description": "The API of Kinyarwanda.net",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development nodemon",
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "test": "NODE_ENV=test node -r ts-node/register -r tsconfig-paths/register node_modules/jest/bin/jest --runInBand --no-cache --detectOpenHandles --forceExit",
    "coverage": "jest --coverage",
    "serve": "node dist/index.js",
    "tsc": "ts-node -r tsconfig-paths/register",
    "lint": "node_modules/.bin/tslint -c tslint.json -p tsconfig.json",
    "js-lint": "node_modules/.bin/eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinyarwanda-net/backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kinyarwanda-net/backend/issues"
  },
  "homepage": "https://github.com/kinyarwanda-net/backend#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.3",
    "@types/morgan": "^1.7.37",
    "@types/mysql": "^2.15.8",
    "@types/node": "^13.7.4",
    "@types/supertest": "^2.0.8",
    "babel-register": "^6.26.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.5"
  }
}
